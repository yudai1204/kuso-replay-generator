{
        "manifest_version": 3,
        "name": "クソリプジェネレータ",
        "version": "0.2.1",
        "description": "ChatGPTにリプライを考えてもらおう",
        "icons": {
            "16": "icon-128.png",
            "48": "icon-128.png",
            "128": "icon-128.png"
        },
        "background": {
            "service_worker": "background/background.js",
            "type": "module"
        },
        "content_scripts": [{
            "matches": ["https://twitter.com/*"],
            "js": ["content.js"]
        }],
        "permissions": [
            "storage",
            "tabs",
            "activeTab"
        ],
        "host_permissions": [
            "<all_urls>"
        ],
        "options_page":"options/options.html"
    }